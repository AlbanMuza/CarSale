@model CarSale.Models.Car


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="color" class="control-label"></label>
                <select asp-for="color" asp-items="Html.GetEnumSelectList<CarSale.Models.Enumerators.Colour>()">
                    <option selected="selected" value=""> Select</option>
                </select>
               @* <select asp-for="color" class="form-control"></select>*@
                <span asp-validation-for="color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewOrUsed" class="control-label"></label>
                <select asp-for="NewOrUsed" asp-items="Html.GetEnumSelectList<CarSale.Models.Enumerators.NewUsed>()">
                    <option selected="selected" value="">Select</option>
                </select>
                @*<select asp-for="NewOrUsed" class="form-control"></select>*@
                <span asp-validation-for="NewOrUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <Button asp-for="ImageLink" class="control-label"></Button>
                <a asp-action="FileUploadPage" asp-route-id="@Model?.Id">Upload Image</a>
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="States" class="control-label"></label>
                <select asp-for="States" asp-items="Html.GetEnumSelectList<CarSale.Models.Enumerators.Sstates>()">
                    <option selected="selected" value="">Select</option>
                </select>
                @*<select asp-for="States" class="form-control"></select>*@
                <span asp-validation-for="States" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedBy" class="control-label"></label>
                <input asp-for="UploadedBy" class="form-control" readonly/>
                <span asp-validation-for="UploadedBy" class="text-danger"></span>
                
            <div class="form-group">
                <label asp-for="InDate" class="control-label"></label>
                <input asp-for="InDate" class="form-control" />
                <span asp-validation-for="InDate" class="text-danger"></span>
            </div>
            
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
